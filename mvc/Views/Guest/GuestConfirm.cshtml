<h1>This is the Guest List for your party</h1><br><br>

<table border style="width:50%">
    <tr>
    <th>Guest Name</th>
    <th>Email</th> 
    <th>Invitation Status</th>
  </tr>

@foreach(Guest g in Model) { 
  <tr>
    <td>@g.nameGuest</td>
    <td>@g.email</td> 
    <td>@g.status</td>
  </tr>
}
</table>
