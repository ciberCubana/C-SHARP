<form asp-action="index2" asp-controller="Budget"    method="POST" role="form">
     <legend><strong>Budget Tracker, helps you keep your event financially balance</strong></legend>
    
       
     
    
  <div class="col-md-6" >
        
        <label for="name">Item Name:</label>
        <input type="text" id="name" name = "ListItems" required/><br><br>
    
        
        <label for="name">Item Cost/Expense:</label>
        <input type="text" id="name" name = "ListPrice" required/>

         <br><br>
    <div class="button" align="center">
        <button type="submit" class="btn btn-primary" >Add Item</button><br><br>
        
    </div>
   
        </div>
    
    <div class="col-md-6" >
        <label for="name">Budget Details:</label>
<table border style="width:50%">
<tr>
    <th>Item Name</th>
    <th>Item Price</th> 
    <th>Balance</th>
  </tr>
@foreach(Budget b in Model) {
  
  <tr>
    <td>@b.itemName</td>
    <td>@b.itemPrice</td> 
    <td>@b.totalBalance</td>
   
    
  </tr>
}  
</table>
    </div>
</form>

    


 




